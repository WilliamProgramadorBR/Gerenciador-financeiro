{
  "name": "financas-app",
  "version": "5.0.1",
  "description": "Aplicativo de gestão financeira",
  "author": {
    "name": "William Oliveira",
    "email": "william100william@gmail.com"
  },
  "main": "main.js",
  "private": true,
  "dependencies": {
    "@tensorflow/tfjs": "^4.20.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.104",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/recharts": "^1.8.29",
    "axios": "^1.7.3",
    "cors": "^2.8.5",
    "framer-motion": "^11.3.28",
    "mathjs": "^13.1.1",
    "nodemailer": "^6.9.14",
    "react": "^18.3.1",
    "react-countup": "^6.5.3",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-input-mask": "^2.0.4",
    "react-number-format": "^5.4.0",
    "react-router-dom": "^6.25.1",
    "react-scripts": "5.0.1",
    "react-switch": "^7.0.0",
    "recharts": "^2.12.7",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "styled-components": "^5.3.11",
    "typescript": "^4.9.5",
    "uuidv4": "^6.2.13",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "start-react": "npx serve -s build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "react-scripts build"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "imgelectron/image_K12_icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "financas_app",
            "setupIcon": "imgelectron/image_K12_icon.ico",
            "authors": "William Oliveira",
            "description": "App de finanças"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "appId": "com.financas.app",
    "productName": "Finanças App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "imgelectron/image_K12_icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "imgelectron/image_K12_icon.ico",
      "uninstallerIcon": "imgelectron/image_K12_icon.ico",
      "installerHeaderIcon": "imgelectron/image_K12_icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "imgelectron/image_K12_icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "imgelectron/image_K12_icon.png"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@types/node": "^20.0.0",
    "@types/react-input-mask": "^3.0.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.34",
    "concurrently": "^6.2.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^5.3.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
